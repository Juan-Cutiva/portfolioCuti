---
import { languages } from '../i18n/ui';
---

<div class="radio-input">
	{
		Object.entries(languages).map(([lang, label]) => (
			<label>
				<input value={lang} name="value-radio" id={lang} type="radio" />
				<a href={`/${lang}/`} class="flex h-10 w-full items-center justify-center">
					{label}
				</a>
			</label>
		))
	}
	<span class="selection"></span>
</div>
<script src="../scripts/langButton.js"></script>

<style>
	.radio-input input {
		@apply hidden;
	}

	.radio-input {
		--container_width: 200px;
		width: var(--container_width);
		@apply relative flex items-center overflow-hidden rounded-[10px] border border-[#3534343a] bg-White text-Black;
	}

	.radio-input label {
		letter-spacing: -1px;
		@apply z-[1] flex w-full cursor-pointer items-center justify-center text-sm font-semibold;
	}

	.selection {
		width: calc(var(--container_width) / 2);
		transition: 0.15s ease;
		@apply absolute left-0 top-0 z-0 hidden h-full;
	}

	.radio-input label:has(input:checked) {
		@apply text-yellow-400 dark:text-yellow-500;
	}

	.radio-input label:has(input:checked) ~ .selection {
		@apply inline-block bg-Black;
	}

	.radio-input label:nth-child(1):has(input:checked) ~ .selection {
		transform: translateX(calc(var(--container_width) * 0 / 2));
	}

	.radio-input label:nth-child(2):has(input:checked) ~ .selection {
		transform: translateX(calc(var(--container_width) * 1 / 2));
	}
</style>
