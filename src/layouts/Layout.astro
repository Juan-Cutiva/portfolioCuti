---
import '@fontsource-variable/rubik';

interface Props {
	title: string;
}

const { title } = Astro.props;

import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!doctype html>
<html lang={lang} class="">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={t('layout.description')} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta
			name="keywords"
			content="PortFolio, portfolio, PortaFolio, portafolio, Juan Cutiva, juan cutiva, Juan David Cutiva Lopez, juan david cutiva lopez, Cutiva, cutiva."
		/>
		<meta property="og:image" content="/screenShot.webp" />
		<meta name="robots" content="LayoutPage, follow" />
		<title>{title}</title>
	</head>
	<body class="bg-[#13151a] font-Rubik">
		<slot />
	</body>
</html>
<script>
	document.querySelector('html').setAttribute('class', window.localStorage.theme ?? 'dark');
</script>

<style>
	html {
		scroll-behavior: smooth;
	}
	body::-webkit-scrollbar {
		overflow: hidden;
		position: relative;
		width: 100%;
		height: 100%;
	}
</style>
