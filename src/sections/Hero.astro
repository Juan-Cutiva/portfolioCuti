---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import '../css/bg.css';
import Download from '../../public/icons/download.astro';
import HeroType from '../components/hero';
import Linkedin from '../icons/linkedin.astro';
import Github from '../icons/github.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="mx-auto flex w-[75vw] justify-between">
	<div class="flex">
		<img
			src="/cutiImg.png"
			alt="Cuti Image"
			class="absolute ml-[4.5rem] mt-3 w-[26rem] rounded-[100px]"
		/>
		<img src="/BIGGLOW.png" alt="Circle Image" class="h-[34em]" />
		<a
			class="absolute top-80 flex size-40 items-center justify-center"
			download="JuanDavidCutivaCV.pdf"
			href="/JuanDavidCutivaCV.pdf"
		>
			<div class="absolute size-28 rounded-full bg-pink-400 opacity-40"></div>
			<div class="absolute size-24 rounded-full bg-pink-700 opacity-70"></div>
			<div
				class="absolute flex size-20 place-content-center rounded-full bg-pink-900 bg-opacity-100 text-Black dark:text-White"
			>
				<p class="inline-flex items-center justify-center pb-px text-2xl"><Download />CV</p>
			</div>
		</a>
		<div class="absolute right-[24rem] top-72">
			<HeroType lang={lang} client:load />
			<div class="absolute top-0 -left-14">
				<a href="https://www.linkedin.com/in/juan-david-cutiva-lopez-62ba62253/" target="_blank" rel="noopener noreferrer"><Linkedin /></a>
				<a href="https://github.com/Juan-Cutiva" target="_blank" rel="noopener noreferrer"><Github/></a>
			</div>
		</div>
	</div>
</section>
<div id="bg" class="bg-[#5b2c80] dark:bg-[#220b35]"></div>
