---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contactSection" class="mx-auto w-[85vw] md:w-[70vw]">
	<h2
		class="mb-12 w-full text-center text-5xl font-semibold text-yellow-400 sm:text-7xl dark:text-yellow-500"
	>
		{t('contact.title')}
	</h2>
	<form
		action="https://formsubmit.co/juandavidcutiva.jdc@gmail.com"
		method="POST"
		class="flex w-full flex-col items-center justify-center gap-4"
	>
		<input type="text" name="name" placeholder={t('contact.name')} required autocomplete="off" />
		<input type="email" name="email" placeholder={t('contact.email')} required autocomplete="off" />
		<input
			type="text"
			name="Affair"
			placeholder={t('contact.affair')}
			required
			autocomplete="off"
		/>
		<textarea name="comments" placeholder={t('contact.comment')} required></textarea>
		<button type="submit">{t('contact.send')}</button>
	</form>
</section>

<style>
	section > form > input {
		@apply w-72 rounded-lg border-[2px] border-yellow-500 bg-[#430a6e] py-2 pl-4 text-base text-White placeholder:font-normal placeholder:text-yellow-500;
	}
	section > form > textarea {
		@apply h-36 w-72 rounded-lg border-[2px] border-yellow-500 bg-[#430a6e] pl-4 pt-2 text-base text-White placeholder:font-normal placeholder:text-yellow-500;
	}
	section > form > button {
		@apply mb-4 flex h-8 w-14 items-center justify-center rounded-lg border-[2px] border-yellow-400 bg-[#430a6e] text-xs font-semibold text-yellow-400 transition-all duration-300 ease-out hover:scale-105 hover:bg-yellow-400 hover:text-Black xs:mb-6 xs:h-10 xs:w-36 xs:text-base sm:mb-8 dark:border-yellow-500 dark:text-yellow-500 dark:hover:bg-yellow-500;
	}
</style>
