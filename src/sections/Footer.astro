---
import LangButton from '../components/LangButton.astro';
---

<footer
	class="flex h-[4.5rem] w-screen items-center justify-center bg-White md:justify-around dark:bg-Black"
>
	<div id="socialMedia" class="flex gap-4">
		<div class="size-11 scale-[.8] bg-yellow-700 xs:scale-100"></div>
		<div class="size-11 scale-[.8] bg-yellow-700 xs:scale-100"></div>
		<div class="size-11 scale-[.8] bg-yellow-700 xs:scale-100"></div>
		<div class="size-11 scale-[.8] bg-yellow-700 xs:scale-100"></div>
	</div>
	<div class="scale-[.8] xs:scale-100">
		<LangButton />
	</div>
</footer>

<style>
	footer {
		--tw-shadow: inset 0 2px 4px 0 rgb(0 0 0 / 0.1);
		--tw-shadow-colored: inset 0 2px 4px 0 var(--tw-shadow-color);
		box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000),
			var(--tw-shadow);
	}
</style>
